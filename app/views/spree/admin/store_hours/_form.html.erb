<div class="row">
  <div class="alpha ten columns">
    <%= f.field_container :open_time do %>
      <%= f.label :open_time %> <span class="required">*</span><br />
      <%= f.text_field :open_time, :class => 'fullwidth title' %>
      <%= f.error_message_on :open_time %>
    <% end %>

    <%= f.field_container :close_time do %>
      <%= f.label :close_time %> <span class="required">*</span><br />
      <%= f.text_field :close_time, :class => 'fullwidth title' %>
      <%= f.error_message_on :close_time %>
    <% end %>
  </div>
</div>
